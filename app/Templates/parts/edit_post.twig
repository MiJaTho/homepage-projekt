{% extends "layout.twig" %}
{% block content %}


<div class="">

    <div class="ui header">
    Edit post
  </div>

  <form class="ui form" method="POST" action="{{ basePath }}/posts">
     {{ csrf_field|raw }}
    <div class="field">
      <input type="text" name="title" placeholder="Message title." value="{{ post[0].title }}">
    </div>
    <div class="field">
      <textarea rows="2" name="content" placeholder="Your message here.">{{ post[0].content }}</textarea>
    </div>
    <button class="ui fluid large blue submit button" type="submit">Submit</button>
   
  </form>

</div>
{% endblock %}
{% extends "layout.twig" %}
{% block content %}
<div class="cd-section">
    <div class="column">
        <h2 class="">
            Register on now!
        </h2>
        <form class="ui large form" method="POST" action="{{ basePath }}/register">

            {{ csrf_field|raw }}
            
            <div class="">
                <div class="field">
                    <label for="username">Email</label>
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <input id="username" type="email" name="username" autocomplete="off" value="{{ fields.username }}">
                    </div>
                </div>
                <div class="field">
                    <label for="password">Password</label>
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input id="password" type="password" name="password" autocomplete="off">
                    </div>
                </div>
                <div class="field">
                    <label for="screenname">Screenname</label>
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <input id="screenname" type="text" name="screenname" autocomplete="off">
                    </div>
                </div>
                <input type="submit" class="ui fluid large blue submit button" value="Register">
            </div>
        </form>
        {% if error %}
            <div class="ui error message">{{ error }}</div>
        {% endif %}
        <div class="ui message">
            Already have an account? <a href="{{ basePath }}/login">Log in</a>
        </div>
    </div>
</div>
{% endblock %}
